{
  "name": "TrackDrive3",
  "version": "1.0.0",
  "private": true,
  "description": "Proyecto combinado para backend y frontend (Ionic y Express).",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "serve:frontend": "ng serve --open",
    "build:frontend": "ng build --prod --output-path=dist",
    "watch:frontend": "ng build --watch --configuration development",
    "start:all": "concurrently \"npm run start\" \"npm run serve:frontend\"",
    "lint": "ng lint",
    "test:frontend": "ng test",
    "test:backend": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/cdk": "^18.2.3",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/material": "^18.2.3",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@capacitor/android": "^6.2.0",
    "@capacitor/camera": "^6.0.2",
    "@capacitor/cli": "^6.2.0",
    "@capacitor/core": "^6.2.0",
    "@ionic/angular": "^8.3.0",
    "@ionic/pwa-elements": "^3.3.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "rxjs": "~7.8.0",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.7",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular-eslint/eslint-plugin": "^18.0.0",
    "@angular-eslint/eslint-plugin-template": "^18.0.0",
    "@angular/cli": "18.2.12",
    "@angular/compiler-cli": "^18.2.13",
    "@ionic/angular-toolkit": "^12.1.1",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.0"
  }
